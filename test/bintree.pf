union Nat {
  zero;
  suc(Nat);
}

function +(Nat,Nat) -> Nat {
  +(zero, m) = m;
  +(suc(n), m) = suc(n + m);
}

function max(Nat,Nat) -> Nat {
  max(zero, n) = n;
  max(suc(m'), n) =
    switch n {
      case zero { suc(m') }
      case suc(n') { suc(max(m',n')) }
    };
}

union Tree {
  empty;
  node(Nat, Tree, Tree);
}

function height(Tree) -> Nat {
  height(empty) = 0;
  height(node(n,L,R)) = 1 + max(height(L), height(R));
}

function sum(Tree) -> Nat {
  sum(empty) = 0;
  sum(node(n,L,R)) = n + sum(L) + sum(R);
}

/*
     t3= 4
